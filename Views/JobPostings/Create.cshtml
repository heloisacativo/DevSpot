@{
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <form method="post" action="Create" class="text-center">
        <div class="mb-2 text-start">
            <label asp-for="Title" class="form-label"></label>
            <textarea asp-for="Title" class="form-control"></textarea>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-2 text-start">
            <label asp-for="Description" class="form-label"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>    
        <div class="mb-2 text-start">
            <label asp-for="Company" class="form-label"></label>
            <input type="text" asp-for="Company" class="form-control" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <div class="mb-2 text-start">
            <label asp-for="Location" class="form-label"></label>
            <input type="text" asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center mt-3 gap-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("Index", "JobPostings")" class="btn btn-secondary">Back</a>
        </div>
        
    </form>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}